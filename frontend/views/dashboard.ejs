<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">RecipeShare</a>
      <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button> -->
      <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarText">
        <span class="navbar-text">
          Welcome, <%= user %>!
        </span>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/logOut">Log Out</a>
          </li>
        </ul>
      </div>
    </nav>
    <section class="dashboard-menu">
        <nav class="nav flex-column side-panel">
          <a class="nav-link text-start forum-channel <%= channel === 'main' ? 'active' : '' %>" href="/dashboard?channel=main">Main</a>
          <a class="nav-link text-start forum-channel <%= channel === '5 Ingredients or Less' ? 'active' : '' %>" href="/dashboard?channel=5%20Ingredients%20or%20Less">5 Ingredients or Less</a>
          <a class="nav-link text-start forum-channel <%= channel === 'Heirloom Recipes' ? 'active' : '' %>" href="/dashboard?channel=Heirloom%20Recipes">Heirloom Recipes</a>
          <a class="nav-link text-start forum-channel <%= channel === 'Cultural Wonders' ? 'active' : '' %>" href="/dashboard?channel=Cultural%20Wonders">Cultural Wonders</a>
        </nav>
    </section>
    <div class="container py-4">
    <div class="d-flex flex-column align-items-center">
      <section>
        <a href="/create?channel=<%= channel %>" class="btn red font-white">
          Create Post
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
          <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5z"/>
          <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1"/>
        </svg>
        </a> 
    </section>
      <div class="d-flex flex-column add-gap">
        <% recipes.forEach(recipe => { %>
          <div class="card">
          <div class="card-header">
            By <%= recipe.author %>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= recipe.recipeName %></h5>
            <p class="card-text flex-grow-1">Duration: <%= recipe.duration %></p>
              <% if (recipe.tag) { %>
                <section class="display-tags">
                  <% recipe.tag.forEach(item => { %>
                      <span class="tag"><%= item %></span>
                  <% }); %> 
                </section> 
              <% } %>
            <section class="view-btn-container">
              <a href="/recipe/<%= recipe._id%>" class="btn mt-auto tan">View</a>
            </section>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    </div>
</body>
</html>