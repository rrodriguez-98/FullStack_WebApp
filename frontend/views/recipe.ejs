<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %>></title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css">
</head>
<body class="red">
        <h1 class="font-white text-center recipe-title">üç¥ <%= recipe.recipeName %> üç¥</h1>
            <section class="recipe-content">
                <section class="ingredients">
                <h3><em>Ingredients:</em></h3>
                <ul>
                    <% recipe.ingredients.forEach(item => { %>
                    <% if (item.trim()) { %>
                        <li><%= item %></li>
                    <% } %>
                    <% }); %>
                </ul>
            </section>
            
            <section class="instructions">
                <h3 class="instructions-title">Instructions:</h3>
                <ol>
                    <% recipe.recipeSteps.forEach(item => { %>
                    <% if (item.trim()) { %>
                        <li><%= item %></li>
                    <% } %>
                    <% }); %>
                </ol>
            </section>
            </section>
            <section class="text-center">
                <a href="/dashboard" class="back-link text-center">Back to Recipes</a>
            </section>  
    <section class="comments-wrapper">
        <section class="text-center new-comment">
                <h3 class="comments-header">üí¨ Comments
                    <% if (recipe.comments && recipe.comments.length > 0) { %>
                        <span class="comment-count"><%= recipe.comments.length %></span>
                    <% } %>
                </h3>
                <form method="POST" action="/comment/<%= recipe.id %>">
                    <input type="text" name="comments" class="comment-input">
                    <button type="submit" class="post-btn">Post</button>
                </form>
            </section>
            <section class="display-comments">
                <% if (recipe.comments) { %>
                    <% recipe.comments.forEach(item => { %>
                        <section class="comment-item">
                            <p><%= item %></p>
                            <p class="comment-author">üë®‚Äçüç≥ by <%= recipe.author %></p> 
                        </section>
                    <% }); %>   
                <% } %>
            </section>
    </section>
    
</body>
</html>